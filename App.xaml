             xmlns:local="clr-namespace:GestionCantine"
             StartupUri="MainWindow.xaml"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Application.Resources>

        <System:Double x:Key="Font">20</System:Double>
        <SolidColorBrush x:Key="BorderBoutton" Color="#FFEE6C4D"/>
